{
  "name": "reunite-backend",
  "version": "0.1.0",
  "description": "Backend for reuniting families separated by natural disaster",
  "main": "app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "NODE_ENV=staging mocha test --recursive --exit",
    "test:coverage": "nyc npm test && nyc report --reporter=html && nyc check-coverage --statements 30 --branches 30 --functions 30 --lines 30",
    "test:coverage:browse": "npm run test:coverage; open coverage/index.html",
    "test:unit": "stryker run",
    "test:full": "npm run lint && npm run test:coverage",
    "lint": "eslint .",
    "nodemon": "nodemon src/app.js",
    "debug": "node --inspect src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.ibm.com/ProjectReunite/reunite.git"
  },
  "author": "ProjectReunite",
  "license": "MIT",
  "bugs": {
    "url": "https://github.ibm.com/ProjectReunite/reunite/issues"
  },
  "homepage": "https://github.ibm.com/ProjectReunite/reunite#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^1.3.1",
    "@stryker-mutator/javascript-mutator": "^1.3.1",
    "@stryker-mutator/mocha-framework": "^1.3.1",
    "@stryker-mutator/mocha-runner": "^1.3.1",
    "chai": "*",
    "chai-http": "^4.2.1",
    "chai-openapi-response-validator": "^0.2.4",
    "chai-things": "^0.2.0",
    "child_process": "^1.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-mocha": "^5.3.0",
    "mocha": "^6.1.4",
    "mocha-sinon": "^2.1.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0",
    "openapi-schema-to-json-schema": "^2.2.0",
    "rewire": "^4.0.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "swagger-parser": "^6.0.5"
  },
